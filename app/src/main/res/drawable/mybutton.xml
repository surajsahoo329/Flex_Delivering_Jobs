<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <gradient android:angle="-90" android:startColor="#5BF090" android:endColor="#1db954"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F31DB954" />
            <solid android:color="#1db954"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1db954" />
            <gradient android:angle="-90" android:startColor="#F31DB954" android:endColor="#1db954" />
        </shape>
    </item>
</selector>