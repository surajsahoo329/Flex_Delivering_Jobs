<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/view2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="10dp"
        app:strokeColor="#000"
        app:strokeWidth="@dimen/cardview_compat_inset_shadow">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_flipkart"
            tools:ignore="VectorDrawableCompat" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/view2"
        android:layout_toRightOf="@+id/view2"
        android:textStyle="bold|italic"
        android:text="Ekart Logistics"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tvTimings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/view2"
        android:layout_toRightOf="@+id/view2"
        android:text="11-Aug, 9 am | 4 hours"
        android:textSize="12sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-30dp"
        android:layout_toEndOf="@+id/view2"
        android:layout_toRightOf="@+id/view2"
        android:textSize="12sp"
        android:text="Baramunda, Bhubaneswar"
        android:textColor="#000" />


</RelativeLayout>
